<div class="js-credential-creation-modal">
    <div class="card">
        <div class="card-body">
            <form>
                <div class="card-title">{{ "reply-web-authn.account.credentialCreationModal.title"|trans }}</div>
                <p class="card-text">
                    <input class="form-control"
                           required="required"
                           type="text"
                           placeholder="{{ "reply-web-authn.account.credentialCreationModal.inputPlaceholder"|trans }}">
                </p>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <button type="reset" class="btn btn-block btn-light">
                            {{ "reply-web-authn.account.credentialCreationModal.buttonCancel"|trans }}
                        </button>
                    </div>
                    <div class="col-12 col-md-6">
                        <button type="submit" class="btn btn-block btn-primary">
                            {{ "reply-web-authn.account.credentialCreationModal.buttonSave"|trans }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
